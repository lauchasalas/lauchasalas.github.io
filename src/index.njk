---
layout: base.njk
title: "Inicio"
---

<!-- HERO -->
<section
  id="hero"
  class="hero-section fade-in"
  style="background-image: url('/photos/hero.jpg')"
>
  <div class="hero-overlay">
    <h1 class="hero-title">Capturando Momentos</h1>
    <p class="hero-subtitle">Fotografía profesional & Marketing visual</p>
    <a href="#portfolio" class="btn-primary">Ver Portfolio</a>
  </div>
</section>

<!-- SOBRE MÍ -->
<section
  id="sobre-mi"
  class="container-custom text-center py-16 fade-in"
  data-aos="fade-up"
>
  <h2>Sobre mí</h2>
  <p>
    Soy Lautaro Salas Ane, fotógrafo y especialista en marketing digital,
    apasionado por convertir momentos auténticos en historias visuales inolvidables.
  </p>
</section>

<!-- PORTFOLIO (mini-carrusel + indicadores) -->
<section class="fade-in" data-aos="fade-right">
  <h2 class="container-custom text-2xl font-bold mb-4">Explora mis Fotos</h2>
  <div class="mini-carousel-wrapper">
    <button class="carousel-button prev" id="carousel-prev">‹</button>
    <div id="mini-carousel" class="mini-carousel scrollbar-hide">
      {% for photo in collections.photo %}
        <img src="{{ photo.url }}" alt="{{ photo.data.title }}" loading="lazy" />
      {% endfor %}
    </div>
    <button class="carousel-button next" id="carousel-next">›</button>
    <div id="dots"></div>
  </div>
</section>

<!-- GALERÍA COMPLETA -->
<section
  id="galeria"
  class="container-custom fade-in"
  data-aos="fade-up"
>
  <h2 class="text-2xl font-bold mb-6">Galería Completa</h2>
  <div class="thumb-grid">
    {% for photo in collections.photo %}
      <a href="{{ photo.url }}" data-lightbox="galeria">
        <img src="{{ photo.url }}" alt="{{ photo.data.title }}" loading="lazy" />
      </a>
    {% endfor %}
  </div>
</section>

<!-- CONTACTO -->
<section
  id="contacto"
  class="container-custom text-center py-16 fade-in"
  data-aos="fade-up"
>
  <h2>Contacto</h2>
  <p class="mb-6">
    ¿Tienes un proyecto en mente? Escríbeme:
  </p>
  <a href="mailto:tuemail@ejemplo.com" class="btn-primary">Enviar mensaje</a>
</section>

<!-- Back to Top -->
<button id="toTop" aria-label="Volver arriba">↑</button>

<script>
  // PARALLAX SUAVE solo en desktop/tablet
  if (window.matchMedia("(hover: hover) and (pointer: fine)").matches) {
    const hero = document.getElementById("hero");
    let scrollY = 0, currentY = 0;
    window.addEventListener("scroll", () => scrollY = window.pageYOffset);
    function smoothParallax() {
      currentY += (scrollY - currentY) * 0.1;
      hero.style.backgroundPositionY = `${currentY * 0.5}px`;
      requestAnimationFrame(smoothParallax);
    }
    smoothParallax();
  }

  // Carrusel con navegación, auto-play e indicadores
  const carousel = document.getElementById("mini-carousel");
  const dotsContainer = document.getElementById("dots");
  const items = carousel.children.length;
  let current = 0;
  for (let i = 0; i < items; i++) {
    const dot = document.createElement("span");
    dotsContainer.append(dot);
  }
  const dots = Array.from(dotsContainer.children);
  function goTo(idx) {
    current = (idx + items) % items;
    const target = carousel.children[current];
    carousel.scrollTo({
      left: target.offsetLeft - (carousel.offsetWidth - target.offsetWidth)/2,
      behavior: "smooth"
    });
    dots.forEach((d,i) => d.classList.toggle("active", i===current));
  }
  document.getElementById("carousel-prev").onclick = () => goTo(current - 1);
  document.getElementById("carousel-next").onclick = () => goTo(current + 1);
  setInterval(() => goTo(current + 1), 5000);
  goTo(0);

  // Sección activa en navbar
  const sections = document.querySelectorAll("section[id]");
  const navLinks = document.querySelectorAll("nav a.nav-link");
  window.addEventListener("scroll", () => {
    const y = window.pageYOffset;
    sections.forEach(sec => {
      const top = sec.offsetTop - 100;
      const bottom = top + sec.offsetHeight;
      const link = document.querySelector(`nav a[href="#${sec.id}"]`);
      if (y >= top && y < bottom) {
        navLinks.forEach(a => a.classList.remove("active"));
        if (link) link.classList.add("active");
      }
    });
  });

  // Back to Top suave
  const toTop = document.getElementById("toTop");
  window.addEventListener("scroll", () => {
    toTop.classList.toggle("show", window.pageYOffset > 400);
  });
  toTop.onclick = () => window.scrollTo({ top: 0, behavior: "smooth" });
</script>
